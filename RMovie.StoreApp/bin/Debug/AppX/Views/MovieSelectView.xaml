            <Button Content=" + Top 10외 영화(가나다순)(130)" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
            <Button Content=" + 영화제 영화(91)" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
        </StackPanel>        
    </Grid>
</UserControl>

